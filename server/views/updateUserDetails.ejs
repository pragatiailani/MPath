<!DOCTYPE html>
<html>
  <head>
    <title>Update User Details</title>
  </head>
  <body>
    <h1>Update User Details</h1>

    <form action="/user/update/<%- user._id %>" method="POST">
      <label>Full Name:</label>
      <input type="text" name="full_name" value="<%- user.fullName %>" />
      <br />
      <label>Email:</label>
      <input type="email" name="email" value="<%- user.email %>" />
      <br />
      <label>Contact Number:</label><br />
      <input type="number" name="phone" required />
      <br />
      <label>Aadhar Card Number:</label><br />
      <input type="number" name="aadharno" required />
      <br />
      <label>Education:</label><br />
      <input type="text" name="education" />
      <br />
      <label>Job:</label><br />
      <input type="text" name="job" />
      <br />
      <label>Skills:</label>
      <input type="text" name="skills" value="<%- user.skills %>" />
      <br />
      <label>Interests:</label>
      <input type="text" name="interests" value="<%- user.interests %>" />
      <br />
      <label>Languages:</label><br />
      <input type="text" name="languages" value="<%- user.languages %>" />
      <br />
      <label>Location:</label>
      <input type="text" name="location" value="<%- user.location %>" />
      <br />
      <input type="submit" value="Update" />
    </form>
  </body>
</html>
